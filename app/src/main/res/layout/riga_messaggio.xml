<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="wrap_content">

    <TextView
            android:text="@string/chat_messaggio"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/textMessaggio"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="24dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textMittente"
            app:layout_constraintEnd_toEndOf="@+id/textMittente"/>
    <TextView
            android:text="@string/mittente"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/textMittente"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="24dp"
            android:textSize="18sp"
            android:textColor="#3F51B5"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp" android:layout_marginEnd="24dp" app:layout_constraintEnd_toEndOf="parent"/>
</android.support.constraint.ConstraintLayout>