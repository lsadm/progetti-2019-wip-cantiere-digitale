<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="wrap_content">

    <TextView
            android:text="@string/chat_messaggio"
            android:layout_width="101dp"
            android:layout_height="31dp"
            android:id="@+id/textMessaggio"
            android:textSize="18sp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.068" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="@+id/textMittente" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="1.0"/>
    <TextView
            android:text="@string/mittente"
            android:layout_width="81dp"
            android:layout_height="74dp"
            android:id="@+id/textMittente" app:layout_constraintEnd_toStartOf="@+id/textMessaggio"
            android:layout_marginEnd="18dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="18dp"
            android:textSize="18sp"
            android:textColor="#3F51B5" app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintTop_toTopOf="parent"
    />
</android.support.constraint.ConstraintLayout>