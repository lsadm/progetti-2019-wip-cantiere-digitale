<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             tools:context=".ListaInteraCompitiFragment">
    <Button
            android:text="@string/lista_dipendenti"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ListaDipendenti" app:layout_constraintStart_toEndOf="@+id/title_fragment_capo"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintHorizontal_bias="0.897"
            android:backgroundTint="#4D1CD6" android:textColor="@color/common_google_signin_btn_text_dark_default"/>
    <TextView
            android:text="@string/lista_attivita"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/tvHint3"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:textColor="#4D1CD6" android:textSize="30sp" android:layout_marginStart="16dp"/>
    <android.support.v7.widget.RecyclerView
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/listCompiti" android:scrollbars="vertical"
            tools:listitem="@layout/riga_compito" app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintTop_toBottomOf="@+id/tvHint3" android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent">
    </android.support.v7.widget.RecyclerView>
</android.support.constraint.ConstraintLayout>