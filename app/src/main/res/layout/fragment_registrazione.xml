<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             tools:context=".LoginFragment">
    <ScrollView
            android:layout_width="0dp"
            android:layout_height="0dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintVertical_bias="0.0">
        <android.support.constraint.ConstraintLayout android:layout_width="match_parent"
                                                     android:layout_height="match_parent"
                                                     android:id="@+id/linearLayout">

    <ImageView
            android:src="@drawable/logo_app"
            android:layout_width="149dp"
            android:layout_height="142dp"
            android:id="@+id/imgLogo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
    <ImageView
            android:src="@drawable/scritta_wip"
            android:layout_width="161dp"
            android:layout_height="58dp"
            android:id="@+id/imgNomeapp"
            app:layout_constraintTop_toBottomOf="@+id/imgLogo" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"/>
    <EditText
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:inputType="textPersonName"
            android:textColor="#ffffff"
            android:textSize="16sp"
            android:drawableStart="@drawable/ic_action_username"
            android:ems="10"
            android:hint="@string/Username"
            android:background="#11000000"
            android:id="@+id/editUsername"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="24dp" app:layout_constraintTop_toBottomOf="@+id/imgNomeapp"/>
    <EditText
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:inputType="text|textEmailAddress"
            android:textColor="#ffffff"
            android:textSize="16sp"
            android:drawableStart="@android:drawable/ic_dialog_email"
            android:ems="10"
            android:hint="@string/email"
            android:background="#11000000"
            android:id="@+id/idpass"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.497" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/editp"/>
    <EditText
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:inputType="textPassword"
            android:textColor="#ffffff"
            android:textSize="16sp"
            android:drawableStart="@drawable/ic_action_password"
            android:ems="10"
            android:hint="@string/Password"
            android:background="#11000000"
            android:id="@+id/editp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/editUsername" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"/>
    <Button
            android:text="@string/SignUp"
            android:layout_width="216dp"
            android:layout_height="89dp"
            android:id="@+id/button2" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/mySpinner"
            app:layout_constraintHorizontal_bias="0.497" app:layout_constraintVertical_bias="0.786"
            android:layout_marginBottom="79dp"/>


    <Spinner
            android:id="@+id/mySpinner"
            android:layout_width="200dp"
            android:layout_height="40dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="56dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.666"
            android:entries="@array/Ruoli" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView" android:visibility="visible"
            android:verticalScrollbarPosition="defaultPosition"
            android:keepScreenOn="false" android:popupElevation="20dp"
            android:popupBackground="@color/common_google_signin_btn_text_dark_default"
            android:background="@color/common_google_signin_btn_text_dark_default"/>
    <TextView
            android:text="@string/seleziona_ruolo"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:id="@+id/textView" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/idpass" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:textSize="20sp" android:textStyle="bold"
            android:textAlignment="center"/>

        </android.support.constraint.ConstraintLayout>
    </ScrollView>


</android.support.constraint.ConstraintLayout>