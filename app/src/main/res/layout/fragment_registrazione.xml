<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             tools:context=".RegistrazioneFragment" android:id="@+id/constraintLayout"
                                             android:backgroundTint="@color/common_google_signin_btn_text_dark_default">
    <ScrollView
            android:layout_width="0dp"
            android:layout_height="0dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintVertical_bias="0.0" android:id="@+id/scrollView">
        <android.support.constraint.ConstraintLayout android:layout_width="match_parent"
                                                     android:layout_height="wrap_content"
                                                     android:id="@+id/linearLayout">


            <TextView
                    android:text="@string/registrati"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/tvRegistrati"
                    android:textColor="#4D1CD6" android:textSize="30sp"
                    android:layout_marginTop="32dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="32dp"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="259dp"/>
            <TextView
                    android:text="@string/inserisci"
                    android:layout_width="283dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvSuggerimentoDati"
                    android:textSize="18sp" android:textAlignment="textStart"
                    android:textStyle="bold"
                    app:layout_constraintTop_toBottomOf="@+id/tvRegistrati" android:layout_marginStart="8dp"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="64dp"
                    app:layout_constraintBottom_toTopOf="@id/editNome" app:layout_constraintHorizontal_bias="0.473"/>
            <EditText
                    android:layout_width="283dp"
                    android:layout_height="45dp"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:id="@+id/editNome"
                    android:hint="@string/NOME" android:textSize="18sp"
                    android:background="#EFEFF0"
                    app:layout_constraintTop_toBottomOf="@+id/tvSuggerimentoDati"
                    android:layout_marginTop="16dp"
                    android:layout_marginStart="8dp"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginBottom="8dp"
                    app:layout_constraintBottom_toTopOf="@+id/editCognome"
                    app:layout_constraintHorizontal_bias="0.473" android:importantForAutofill="no" tools:targetApi="o"/>
            <EditText
                    android:layout_width="283dp"
                    android:layout_height="45dp"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:id="@+id/editCognome"
                    android:hint="@string/cognome" android:background="#EFEFF0"
                    android:layout_marginBottom="40dp"
                    app:layout_constraintBottom_toTopOf="@+id/editCellulare"
                    app:layout_constraintTop_toBottomOf="@id/editNome" android:layout_marginStart="8dp"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
                    app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.472"
                    android:layout_marginTop="16dp" android:importantForAutofill="no" tools:targetApi="o"/>
            <EditText
                    android:layout_width="283dp"
                    android:layout_height="45dp"
                    android:inputType="textPersonName"
                    android:textColor="@color/common_google_signin_btn_text_dark_focused"
                    android:textSize="18sp"
                    android:ems="10"
                    android:hint="@string/cellulare"
                    android:background="#EFEFF0"
                    android:id="@+id/editCellulare"
                    app:layout_constraintBottom_toTopOf="@id/editMail" android:layout_marginStart="8dp"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="48dp"
                    app:layout_constraintTop_toTopOf="@id/editCognome" app:layout_constraintHorizontal_bias="0.473"
                    android:importantForAutofill="no" tools:targetApi="o"/>
            <EditText
                    android:layout_width="283dp"
                    android:layout_height="45dp"
                    android:inputType="textPersonName"
                    android:textColor="@color/common_google_signin_btn_text_dark_focused"
                    android:textSize="16sp"
                    android:drawableStart="@android:drawable/ic_dialog_email"
                    android:ems="10"
                    android:hint="@string/email"
                    android:background="#EFEFF0"
                    android:id="@+id/editMail"
                    android:layout_marginTop="16dp"
                    app:layout_constraintTop_toBottomOf="@+id/editCellulare"
                    android:layout_marginEnd="8dp"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
                    app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.473"
                    android:importantForAutofill="no" tools:targetApi="o"/> 
            <EditText
                    android:layout_width="283dp"
                    android:layout_height="45dp"
                    android:inputType="textPassword"
                    android:textColor="@color/common_google_signin_btn_text_dark_focused"
                    android:textSize="16sp"
                    android:drawableStart="@drawable/ic_action_password"
                    android:ems="10"
                    android:hint="@string/Password"
                    android:background="#EFEFF0"
                    android:id="@+id/editPassword"
                    android:layout_marginTop="16dp"
                    app:layout_constraintTop_toBottomOf="@+id/editMail" android:layout_marginStart="8dp"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
                    app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.473"
                    android:importantForAutofill="no" tools:targetApi="o"/>
            <Spinner
                    android:id="@+id/SpinnerScelta"
                    android:layout_width="100dp"
                    android:layout_height="44dp"
                    android:entries="@array/Ruoli"
                    android:visibility="visible"
                    android:verticalScrollbarPosition="defaultPosition"
                    android:keepScreenOn="false" android:popupElevation="20dp"
                    android:popupBackground="@color/common_google_signin_btn_text_dark_default"
                    android:background="#EFEFF0"
                    android:textAlignment="viewStart"
                    android:spinnerMode="dialog"
                    android:layout_marginStart="64dp" app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tvSuggerimentoRuolo" android:layout_marginTop="16dp"
                    app:layout_constraintBottom_toTopOf="@+id/btnCrea" app:layout_constraintVertical_bias="0.0"
                    android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"/>
            <TextView
                    android:text="@string/seleziona_ruolo"
                    android:layout_width="155dp"
                    android:layout_height="27dp"
                    android:id="@+id/tvSuggerimentoRuolo"
                    android:textSize="18sp"
                    android:textAlignment="viewStart"
                    android:textStyle="bold"
                    android:layout_marginStart="64dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/editPassword" android:layout_marginTop="16dp"
                    android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"/>
            <Button
                    android:text="@string/SignUp"
                    android:layout_width="212dp"
                    android:layout_height="65dp"
                    android:id="@+id/btnCrea"
                    android:textColor="#FFFFFF" android:backgroundTint="#4D1CD6" android:textSize="18sp"
                    android:layout_marginEnd="8dp"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
                    app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.551"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginTop="80dp" app:layout_constraintTop_toBottomOf="@+id/tvSuggerimentoRuolo"
                    app:layout_constraintVertical_bias="1.0"/>

        </android.support.constraint.ConstraintLayout>
    </ScrollView>


</android.support.constraint.ConstraintLayout>