<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             tools:context=".LoginFragment">
    <ScrollView
            android:layout_width="0dp"
            android:layout_height="0dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintVertical_bias="0.0" android:id="@+id/scrollView2">
        <android.support.constraint.ConstraintLayout android:layout_width="match_parent"
                                                     android:layout_height="wrap_content"
                                                     android:id="@+id/linearLayout">

            <TextView
                    android:text="@string/Intro"
                    android:layout_width="318dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/intro2" app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintHorizontal_bias="0.494" app:layout_constraintEnd_toEndOf="parent"
                    android:textSize="18sp" android:textAlignment="center" android:layout_marginTop="16dp"
                    app:layout_constraintTop_toBottomOf="@+id/welcome5"/>
            <TextView
                    android:text="@string/welcome2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/welcome5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"
                    android:textSize="30sp"
                    app:layout_constraintTop_toBottomOf="@+id/welcome3"/>
            <TextView
                    android:text="@string/welcome1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/welcome3" app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="46dp" app:layout_constraintTop_toTopOf="parent" android:textSize="30sp"/>
            <EditText
                    android:layout_width="200dp"
                    android:layout_height="45dp"
                    android:inputType="textPersonName"
                    android:textColor="#ffffff"
                    android:textSize="16sp"
                    android:drawableStart="@drawable/ic_action_username"
                    android:ems="10"
                    android:hint="@string/Username"
                    android:background="#11000000"
                    android:id="@+id/editUsername"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="32dp" app:layout_constraintTop_toBottomOf="@+id/intro2"/>
            <EditText
                    android:layout_width="200dp"
                    android:layout_height="45dp"
                    android:inputType="text|textEmailAddress"
                    android:textColor="#ffffff"
                    android:textSize="16sp"
                    android:drawableStart="@android:drawable/ic_dialog_email"
                    android:ems="10"
                    android:hint="@string/email"
                    android:background="#11000000"
                    android:id="@+id/idpass"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintHorizontal_bias="0.497" app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/editp"/>
            <EditText
                    android:layout_width="200dp"
                    android:layout_height="45dp"
                    android:inputType="textPassword"
                    android:textColor="#ffffff"
                    android:textSize="16sp"
                    android:drawableStart="@drawable/ic_action_password"
                    android:ems="10"
                    android:hint="@string/Password"
                    android:background="#11000000"
                    android:id="@+id/editp"
                    android:layout_marginTop="16dp"
                    app:layout_constraintTop_toBottomOf="@+id/editUsername"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"/>
            <Button
                    android:text="@string/SignUp"
                    android:layout_width="250dp"
                    android:layout_height="50dp"
                    android:id="@+id/button2" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginTop="32dp" app:layout_constraintTop_toBottomOf="@+id/mySpinner"
                    app:layout_constraintHorizontal_bias="0.5" app:layout_constraintVertical_bias="0.786"
                    android:textColor="#FFFFFF" android:backgroundTint="#4D1CD6"/>


            <Spinner
                    android:id="@+id/mySpinner"
                    android:layout_width="200dp"
                    android:layout_height="45dp"
                    android:entries="@array/Ruoli"
                    android:visibility="visible"
                    android:verticalScrollbarPosition="defaultPosition"
                    android:keepScreenOn="false" android:popupElevation="20dp"
                    android:popupBackground="@color/common_google_signin_btn_text_dark_default"
                    android:background="#E8E8E8"
                    android:textAlignment="center"
                    app:layout_constraintTop_toBottomOf="@+id/textView" app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"/>
            <TextView
                    android:text="@string/seleziona_ruolo"
                    android:layout_width="200dp"
                    android:layout_height="45dp"
                    android:id="@+id/textView" android:layout_marginTop="32dp"
                    app:layout_constraintTop_toBottomOf="@+id/idpass" app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="8dp" android:textSize="20sp" android:textStyle="bold"
                    android:textAlignment="center" app:layout_constraintHorizontal_bias="0.5"/>

        </android.support.constraint.ConstraintLayout>
    </ScrollView>


</android.support.constraint.ConstraintLayout>