<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             tools:context=".LoginFragment">
    <ImageView
            android:src="@drawable/logo_app"
            android:layout_width="149dp"
            android:layout_height="142dp"
            android:id="@+id/imgLogo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
    <ImageView
            android:src="@drawable/scritta_wip"
            android:layout_width="161dp"
            android:layout_height="58dp"
            android:id="@+id/imgNomeapp"
            app:layout_constraintTop_toBottomOf="@+id/imgLogo" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"/>
    <EditText
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:inputType="textPersonName"
            android:textColor="#ffffff"
            android:textSize="16sp"
            android:drawableStart="@drawable/ic_action_username"
            android:ems="10"
            android:hint="@string/Username"
            android:background="#11000000"
            android:id="@+id/editUsername"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="24dp" app:layout_constraintTop_toBottomOf="@+id/imgNomeapp"/>
    <EditText
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:inputType="textPassword"
            android:textColor="#ffffff"
            android:textSize="16sp"
            android:drawableStart="@android:drawable/ic_dialog_email"
            android:ems="10"
            android:hint=" E-mail"
            android:background="#11000000"
            android:id="@+id/editPassword"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.497" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/editPassword3"/>
    <EditText
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:inputType="textPassword"
            android:textColor="#ffffff"
            android:textSize="16sp"
            android:drawableStart="@drawable/ic_action_password"
            android:ems="10"
            android:hint="@string/Password"
            android:background="#11000000"
            android:id="@+id/editPassword3"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/editUsername" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"/>
    <Button
            android:text="Registrati"
            android:layout_width="216dp"
            android:layout_height="89dp"
            android:id="@+id/button2" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/mySpinner"
            app:layout_constraintHorizontal_bias="0.497" app:layout_constraintVertical_bias="0.49"/>


    <Spinner
            android:id="@+id/mySpinner"
            android:layout_width="200dp"
            android:layout_height="40dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="56dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.666"
            android:entries="@array/Ruoli" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView" android:visibility="visible"
            android:verticalScrollbarPosition="defaultPosition"
            android:keepScreenOn="false" android:popupElevation="20dp"
            android:popupBackground="@android:drawable/arrow_down_float"/>
    <TextView
            android:text="Seleziona ruolo:"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:id="@+id/textView" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/editPassword" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:textSize="20sp" android:textStyle="bold"
            android:textAlignment="center"/>

</android.support.constraint.ConstraintLayout>