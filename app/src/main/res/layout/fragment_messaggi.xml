<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context=".MessaggiFragment">
    <TextView
            android:text="@string/messaggi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/title_fragment_messaggi"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="32dp" app:layout_constraintStart_toStartOf="parent"
            android:textColor="#4D1CD6" android:textSize="30sp" android:layout_marginStart="32dp"/>
    <android.support.v7.widget.RecyclerView
            android:layout_width="0dp"
            android:layout_height="642dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/title_fragment_messaggi"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp" app:layout_constraintEnd_toEndOf="parent"/>
</android.support.constraint.ConstraintLayout>