<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             tools:context=".LoginFragment" android:id="@+id/constraintLayout">
    <ScrollView
            android:layout_width="0dp"
            android:layout_height="0dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintVertical_bias="0.0">
        <android.support.constraint.ConstraintLayout android:layout_width="match_parent"
                                                     android:layout_height="wrap_content"
                                                     android:id="@+id/linearLayout">
            <EditText
                    android:layout_width="0dp"
                    android:layout_height="45dp"
                    android:inputType="textPersonName"
                    android:textColor="@color/common_google_signin_btn_text_dark_focused"
                    android:textSize="16sp"
                    android:drawableStart="@android:drawable/ic_dialog_email"
                    android:ems="10"
                    android:hint="@string/email"
                    android:background="#EFEFF0"
                    android:id="@+id/editMail"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintHorizontal_bias="0.497" app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/tvHint"
                    android:layout_marginStart="64dp" android:layout_marginEnd="64dp" android:importantForAutofill="no"
                    tools:targetApi="o"/>
            <EditText
                    android:layout_width="0dp"
                    android:layout_height="45dp"
                    android:inputType="textPassword"
                    android:textColor="@color/common_google_signin_btn_text_dark_focused"
                    android:textSize="16sp"
                    android:drawableStart="@drawable/ic_action_password"
                    android:ems="10"
                    android:hint="@string/Password"
                    android:background="#EFEFF0"
                    android:id="@+id/editPassword"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/editMail"
                    android:layout_marginStart="64dp" android:layout_marginEnd="64dp" android:autofillHints=""
                    tools:targetApi="o"/>
            <Button
                    android:text="@string/accedilogin"
                    android:layout_width="0dp"
                    android:layout_height="50dp" android:id="@+id/btnSignin"
                    app:layout_constraintTop_toBottomOf="@+id/editPassword"
                    android:layout_marginTop="44dp" android:textSize="18sp" android:textColor="#FFFFFF"
                    android:backgroundTint="#4D1CD6"
                    app:layout_constraintStart_toStartOf="@+id/editPassword"
                    app:layout_constraintEnd_toEndOf="@+id/editPassword" app:layout_constraintHorizontal_bias="0.0"/>
            <TextView
                    android:text="@string/welcome1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/welcome" app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="46dp" app:layout_constraintTop_toTopOf="parent" android:textSize="30sp"/>
            <TextView
                    android:text="@string/welcome2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/welcome2"
                    app:layout_constraintTop_toBottomOf="@+id/welcome" app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"
                    android:textSize="30sp"/>
            <TextView
                    android:text="@string/Intro"
                    android:layout_width="318dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/intro" app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/welcome2"
                    android:textSize="18sp" android:textAlignment="center"/>
            <TextView
                    android:text="@string/tvHint"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvHint" android:textSize="18sp"
                    android:layout_marginTop="50dp" app:layout_constraintTop_toBottomOf="@+id/intro"
                    app:layout_constraintStart_toStartOf="@+id/editMail"
                    app:layout_constraintEnd_toEndOf="@+id/editMail" android:textStyle="bold"/>
            <CheckBox
                    android:text="@string/AutoLogin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/checkAutoLogin" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="8dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="8dp" app:layout_constraintHorizontal_bias="0.312"
                    android:textColor="#3F51B5" android:textStyle="italic" android:layout_marginTop="32dp"
                    app:layout_constraintTop_toBottomOf="@+id/btnSignin"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintVertical_bias="1.0"/>
        </android.support.constraint.ConstraintLayout>
    </ScrollView>


</android.support.constraint.ConstraintLayout>