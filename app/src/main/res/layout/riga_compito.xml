<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="90dip">

    <TextView
            android:text="@string/compito"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/nomeCompito"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="48dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="16dp" android:textStyle="bold"
            android:textSize="18sp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/idDescrizione"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/nomeCompito"
            app:layout_constraintStart_toStartOf="@+id/nomeCompito"
            android:layout_marginStart="32dp" android:text="@string/descrizione"/>
</android.support.constraint.ConstraintLayout>