<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="90dip">

    <CheckBox
            android:text="@string/compito"
            android:clickable="false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/tvNomeCompito"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="4dp" android:textStyle="bold"
            android:textSize="18sp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/tvDescrizionee"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/tvNomeCompito"
            app:layout_constraintStart_toStartOf="@+id/tvNomeCompito"
            android:layout_marginStart="32dp" android:text="@string/descrizione"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintVertical_bias="0.0"/>
</android.support.constraint.ConstraintLayout>