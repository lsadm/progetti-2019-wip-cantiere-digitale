<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             tools:context=".LavoratoreFragment">

    <TextView
            android:text="Cognome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView2"
            app:layout_constraintStart_toStartOf="@+id/guideline"
            app:layout_constraintBaseline_toBaselineOf="@+id/editProduttore"/>
    <android.support.constraint.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                          android:id="@+id/guideline" app:layout_constraintGuide_begin="15dp"
                                          android:orientation="vertical"/>
    <TextView
            android:text="Username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView7"
            app:layout_constraintStart_toStartOf="@+id/guideline"
            app:layout_constraintBaseline_toBaselineOf="@+id/editGradazione"/>
    <EditText
            android:layout_width="240dp"
            android:layout_height="38dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/editProduttore"
            android:hint="Cognome lavoratore"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="@+id/editNome" android:layout_marginTop="30dp"
            app:layout_constraintTop_toBottomOf="@+id/editNome" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="15dp" app:layout_constraintHorizontal_bias="1.0"/>
    <EditText
            android:layout_width="240dp"
            android:layout_height="38dp"
            android:inputType="numberDecimal"
            android:ems="10"
            android:id="@+id/editGradazione"
            android:hint="Username lavoratore"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="@+id/editProduttore" android:layout_marginTop="30dp"
            app:layout_constraintTop_toBottomOf="@+id/editProduttore" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="15dp" app:layout_constraintHorizontal_bias="1.0"/>
    <TextView
            android:text="Nome"
            android:layout_width="49dp"
            android:layout_height="18dp"
            android:id="@+id/textView" app:layout_constraintStart_toStartOf="@+id/guideline"
            app:layout_constraintBaseline_toBaselineOf="@+id/editNome"/>
    <EditText
            android:layout_width="240dp"
            android:layout_height="38dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/editNome"
            android:hint="Nome lavoratore"
            android:layout_marginTop="70dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginEnd="15dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/textView" android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="0.988"/>
    <TextView
            android:text="Tempo di permanenza"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView4" android:textSize="12sp"
            app:layout_constraintBaseline_toBaselineOf="@+id/editText" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="20dp"/>
    <EditText
            android:layout_width="240dp"
            android:layout_height="38dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/editText"
            android:hint="Tempo di permanenza del lavoratore" android:textSize="14sp"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="@+id/editGradazione" android:layout_marginTop="30dp"
            app:layout_constraintTop_toBottomOf="@+id/editGradazione" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="15dp" app:layout_constraintHorizontal_bias="1.0"/>
    <TextView
            android:text="Compiti svolti"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView8"
            app:layout_constraintBaseline_toBaselineOf="@+id/editText2" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="20dp"/>
    <EditText
            android:layout_width="240dp"
            android:layout_height="38dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/editText2"
            android:hint="Compiti svolti del lavoratore"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="@+id/editText" android:layout_marginTop="30dp"
            app:layout_constraintTop_toBottomOf="@+id/editText" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="15dp" app:layout_constraintHorizontal_bias="0.733"/>
    <Button
            android:text="Button"
            android:layout_width="188dp"
            android:layout_height="87dp"
            android:id="@+id/button"
            android:layout_marginTop="70dp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="70dp" app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintVertical_bias="0.256" app:layout_constraintTop_toBottomOf="@+id/editText2"/>

</android.support.constraint.ConstraintLayout>