<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             tools:context=".CompitiFragment">
    <android.support.v7.widget.RecyclerView
            android:layout_width="411dp"
            android:layout_height="728dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" android:id="@+id/listaCompiti" android:scrollbars="vertical"
            tools:listitem="@layout/riga_compito" app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintVertical_bias="0.0">
    </android.support.v7.widget.RecyclerView>
    <android.support.design.widget.FloatingActionButton

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true" android:id="@+id/fabAggiungiCompito" android:focusableInTouchMode="false"
            android:layout_marginEnd="24dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="44dp"
            app:layout_constraintBottom_toBottomOf="parent" app:backgroundTint="#3F51B5"
            android:focusable="true" android:src="@android:drawable/ic_menu_add"/>
</android.support.constraint.ConstraintLayout>