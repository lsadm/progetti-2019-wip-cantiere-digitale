<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             tools:context=".CompitiFragment">
    <TextView
            android:text="@string/lista_attivita"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/title_fragment_capo2"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="32dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="32dp" android:textColor="#4D1CD6" android:textSize="30sp"/>
    <android.support.v7.widget.RecyclerView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/listaCompiti" android:scrollbars="vertical"
            tools:listitem="@layout/riga_compito" app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintTop_toBottomOf="@+id/title_fragment_capo2" android:layout_marginTop="32dp">
    </android.support.v7.widget.RecyclerView>
    <android.support.design.widget.FloatingActionButton

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true" android:id="@+id/fabAggiungiCompito" android:focusableInTouchMode="false"
            android:layout_marginEnd="24dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="44dp"
            app:layout_constraintBottom_toBottomOf="parent" app:backgroundTint="#3F51B5"
            android:focusable="true" android:src="@android:drawable/ic_menu_add"/>
</android.support.constraint.ConstraintLayout>