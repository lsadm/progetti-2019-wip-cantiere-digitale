<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent">
    <ScrollView
            android:layout_width="0dp"
            android:layout_height="0dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintVertical_bias="0.0">
        <android.support.constraint.ConstraintLayout android:layout_width="match_parent"
                                                     android:layout_height="match_parent"
                                                     android:id="@+id/linearLayout">
            <TextView
                    android:text="@string/inserire_compito"
                    android:layout_width="300dp"
                    android:layout_height="52dp" android:id="@+id/idInserireNome"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:gravity="center"
                    android:layout_marginTop="28dp"
                    app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.475"/>
            <TextView
                    android:text="@string/inserire_desc"
                    android:layout_width="300dp"
                    android:layout_height="52dp" android:id="@+id/nomeCompito"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:textAlignment="center"
                    android:layout_marginTop="16dp"
                    app:layout_constraintTop_toBottomOf="@+id/idAggiungiCompito"
                    app:layout_constraintStart_toStartOf="@+id/idAggiungiCompito"
                    app:layout_constraintEnd_toEndOf="@+id/idAggiungiCompito"/>
            <EditText
                    android:layout_width="200dp"
                    android:layout_height="52dp" android:id="@+id/idAggiungiCompito"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:gravity="center|top"
                    android:layout_marginTop="0dp"
                    app:layout_constraintTop_toBottomOf="@+id/idInserireNome"
                    app:layout_constraintEnd_toEndOf="@+id/idInserireNome"
                    app:layout_constraintStart_toStartOf="@+id/idInserireNome" android:inputType="text"
                    android:hint="@string/compito"/>
            <EditText
                    android:layout_width="380dp"
                    android:layout_height="300dp" android:id="@+id/idDescrizione"
                    android:visibility="visible" tools:visibility="visible"
                    android:background="?attr/colorButtonNormal"
                    app:layout_constraintTop_toBottomOf="@+id/nomeCompito" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="8dp" android:layout_marginEnd="8dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:textSize="22sp" android:inputType="textMultiLine"
                    android:hint="@string/descrizione"
                    android:autofillHints="" android:autoText="false"
                    app:layout_constraintHorizontal_bias="1.0" android:layout_marginTop="12dp"
                    android:textDirection="locale" android:singleLine="false"
                    android:textAppearance="@style/TextAppearance.AppCompat.Display4"
                    android:lineSpacingExtra="10sp" android:fontFamily="monospace" android:textStyle="bold"/>
            <Button
                    android:text="@string/aggiungi"
                    android:layout_width="285dp"
                    android:layout_height="98dp"
                    android:id="@+id/idDone"
                    android:layout_marginBottom="60dp"
                    app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="8dp"
                    android:layout_marginTop="18dp" app:layout_constraintTop_toBottomOf="@+id/idDescrizione"
                    android:textSize="18sp"/>
        </android.support.constraint.ConstraintLayout>
    </ScrollView>


</android.support.constraint.ConstraintLayout>